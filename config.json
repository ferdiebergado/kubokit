{
  "server": {
    "url": "localhost:8080",
    "port": 8080,
    "read_timeout": "10s",
    "write_timeout": "20s",
    "idle_timeout": "10s",
    "shutdown_timeout": "5s",
    "max_body_bytes": 1024000
  },
  "db": {
    "driver": "pgx",
    "max_open_conns": 30,
    "max_idle_conns": 10,
    "conn_max_idletime": "10s",
    "conn_max_lifetime": "30s",
    "ping_timeout": "5s"
  },
  "jwt": {
    "jti_length": 32,
    "issuer": "example.com",
    "ttl": "15m",
    "refresh_ttl": "24h"
  },
  "cookie": {
    "name": "refresh_token",
    "max_age": "24h"
  },
  "email": {
    "templates": "web/templates",
    "layout": "layout.html",
    "sender": "test@example.com",
    "verify_ttl": "5m"
  },
  "argon2": {
    "memory": 65536,
    "iterations": 3,
    "threads": 2,
    "salt_length": 16,
    "key_length": 32
  },
  "csrf": {
    "cookie_name": "csrf_token",
    "header_name": "X-CSRF-Token",
    "token_length": 32,
    "expiration": "30m"
  }
}
