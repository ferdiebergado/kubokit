{
  "app": {
    "env": "development",
    "key": "secure_random_key",
    "url": "http://127.0.0.1:8000",
    "log_level": "info",
    "client_url": "http://127.0.0.1:5173"
  },
  "server": {
    "port": 8080,
    "read_timeout": "10s",
    "write_timeout": "20s",
    "idle_timeout": "10s",
    "shutdown_timeout": "5s",
    "max_body_bytes": 1024000
  },
  "db": {
    "host": "localhost",
    "port": 5432,
    "user": "postgres",
    "pass": "postgres",
    "name": "postgres",
    "ssl_mode": "require",
    "driver": "pgx",
    "max_open_conns": 30,
    "max_idle_conns": 10,
    "conn_max_idletime": "10s",
    "conn_max_lifetime": "30s",
    "ping_timeout": "5s"
  },
  "jwt": {
    "jti_length": 64,
    "issuer": "example.com",
    "ttl": "15m",
    "refresh_ttl": "24h"
  },
  "smtp": {
    "host": "localhost",
    "port": 1080,
    "user": "user@example.com",
    "password": "example"
  },
  "email": {
    "templates": "web/templates",
    "layout": "layout.html",
    "sender": "test@example.com",
    "verify_ttl": "5m"
  },
  "argon2": {
    "memory": 65536,
    "iterations": 3,
    "threads": 2,
    "salt_length": 16,
    "key_length": 32
  },
  "cors": {
    "allowed_origins": ["*"],
    "allowed_methods": ["GET", "POST", "PATCH", "PUT", "DELETE", "OPTIONS"],
    "allowed_headers": [
      "Content-Type",
      "Authorization",
      "X-Client-Fingerprint"
    ],
    "include_creds": true
  },
  "cookie": {
    "refresh": "__Secure-ref",
    "access_fingerprint": "__Secure-fp",
    "refresh_fingerprint": "__Secure-rfp"
  },
  "csrf": {
    "cookie_name": "__Secure-csrf",
    "header_name": "X-CSRF-Token",
    "token_len": 32,
    "max_age": "24h"
  }
}
